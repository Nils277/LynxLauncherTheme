<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:keep="@drawable/theme_light_dnd_switch">
    <item android:state_drag_hovered="true">
        <shape
            android:shape="rectangle" >
            <stroke android:width="1dp" android:color="#FFe09c46"/>
            <solid android:color="#D0f1a74b"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <padding android:left="12dp" android:top="6dp"  android:right="12dp" android:bottom="6dp"/>
            <solid android:color="@color/theme_light_element"/>
        </shape>
    </item>
</selector>